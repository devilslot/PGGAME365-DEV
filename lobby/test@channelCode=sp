<body>
    <script>
        var vm = '';
        var urlParams = new URLSearchParams(window.location.search);
        var urlParamsMobile = urlParams.get('mobile');
        if (urlParamsMobile) {
            if (urlParamsMobile.toString() == 'true') {
                wm = 'mobile';
            } else {
                wm = 'web';
            }
        } else {
            if (egret.Capabilities.isMobile) {
                wm = 'mobile';
            } else {
                 wm = 'web';
            }
        }

        var href = location.origin + '/' + wm + '/' + location.search; 
        window.location.href = href;
    </script>
